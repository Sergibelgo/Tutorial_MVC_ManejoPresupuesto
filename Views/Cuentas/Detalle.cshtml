@model IEnumerable<TransaccionDTO>
@{
    ViewData["title"] = "Detalle";
}
<h1>Movimientos </h1>
<h4>
    <a asp-route-mes="@ViewBag.mesAnterior" asp-route-año="@ViewBag.añoAnterior" class="btn btn-secondary"><i class="bi-chevron-left"></i></a>
    @ViewBag.fechaActual.ToString("MMM-yyy")
    <a asp-route-mes="@ViewBag.mesPosterior" asp-route-año="@ViewBag.añoPosterior" class="btn btn-secondary"><i class="bi-chevron-right"></i></a>
</h4>
<table class="table">
    <thead>
    <th>
        Categoria
    </th>
    <th>
        Nota
    </th>
    <th>
        Monto
    </th>
    </thead>
    <tbody>
        @foreach (var transaccion in Model)
        {
            <tr>
                <td>
                    @transaccion.NombreCategoria
                </td>
                <td>
                    @transaccion.Nota
                </td>
                <td>
                    @transaccion.Monto
                </td>
            </tr>
        }
    </tbody>
</table>