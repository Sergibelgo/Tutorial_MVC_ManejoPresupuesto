@model IEnumerable<TransaccionDTO>
@{
    ViewData["title"] = "Index";
}
<h1>Transacciones</h1>
<a class="btn btn-primary" asp-action="Crear">Crear</a>
<table class="table">
    <thead>
    <th>
        Acciones
    </th>
    <th>
        Fecha
    </th>
    <th>
        Monto
    </th>
    <th>
        Nota
    </th>
    <th>
        Cuenta
    </th>
    <th>
        Categoria
    </th>
    </thead>
    <tbody>
        @foreach (var transaccion in Model)
        {
            <tr>
                <td>
                    <a asp-action="Editar" asp-route-Id="@transaccion.Id" class="btn btn-primary"><i class="bi-pencil-fill"></i></a>
                </td>
                <td>
                    @transaccion.FechaTransaccion
                </td>
                <td>
                    @transaccion.Monto
                </td>
                <td>
                    @transaccion.Nota

                </td>
                <td>
                    @transaccion.cuenta.Descripcion
                </td>
                <td>
                    @transaccion.categoria.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>